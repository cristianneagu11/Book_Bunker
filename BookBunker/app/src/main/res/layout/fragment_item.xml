<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neagucristian.bookbunker.ItemFragment"
    android:layout_marginTop="48dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlu"
            android:id="@+id/item_title"
            android:fontFamily="sans-serif-thin"
            android:textSize="15pt"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:id="@+id/item_author"
            android:fontFamily="sans-serif-thin"
            android:textSize="10pt"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/item_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RatingBar style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_rating"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/item_author"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:id="@+id/item_comment"
            android:fontFamily="sans-serif-thin"
            android:textSize="8pt"
            android:textColor="#000000"
            android:layout_below="@+id/item_rating"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_photo"
            android:layout_toRightOf="@+id/item_rating"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/item_comment" />


    </RelativeLayout>

</FrameLayout>
